{
  "autoload": {
    "psr-4": {
      "ACRKit\\": "includes/"
    }
  },
  "authors": [
    {
      "name": "Mehedi Hasan",
      "email": "me@mehedi.im"
    }
  ],
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.2"
  },
  "require": {
    "php": ">=7.4",
    "mehedimi/wp-query-builder": "^0.17"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform": {
      "php": "7.4"
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "format": "phpcbf",
    "lint": "phpcs -s"
  }
}
